{
  "version": 2,
  "builds": [
    {
      "src": "api/*.php",
      "use": "vercel-php@0.7.3"
    },
    {
      "src": "api/lost-stolen.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/lost-stolen",
      "dest": "/api/lost-stolen.js"
    },
    {
      "src": "/api/(.*\\.php)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "PHP_EXTENSIONS": "pdo,pdo_pgsql"
  }
}

